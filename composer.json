{
  "name": "sauber-php/http",
  "description": "The HTTP component for the Sauber PHP framework",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "role": "Developer",
      "name": "Steve McDougall",
      "email": "juststevemcd@gmail.com",
      "homepage": "https://www.juststeveking.uk/"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sauber\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sauber\\Http\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "pestphp/pest": "^1.21",
    "phpstan/phpstan": "^1.7"
  }
}
